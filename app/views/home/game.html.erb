<%= stylesheet_link_tag    'game', media: 'all', 'data-turbolinks-track' => true %>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="/js/in_game.js"></script>

<div class="users ready">
    <div class="section">
        <div class="user1">
        <img src='<%= asset_path 'boy1.png'%>' alt='boy1'/>
        <div class="player_username">

        </div>
        </div>
        <div class="user2">
        <img src='<%= asset_path 'boy2.png'%>' alt='boy2'/>
        <div class="player_username">

        </div>
        </div>
    </div>
    <div class="section">
        <div class="user3">
        <img src='<%= asset_path 'girl1.png'%>' alt='girl1'/>
        <div class="player_username">
        </div>
        </div>

        <div class="user4">
        <img src='<%= asset_path 'girl2.png'%>' alt='boy2'/>
        <div class="player_username">
        </div>
        </div>
    </div>
    <div class="section">
        <div class="user5">
        <img src='<%= asset_path 'boy1.png'%>' alt='boy1'/>
        <div class="player_username">
        </div>
        </div>

        <div class="user6">
        <img src='<%= asset_path 'boy1.png'%>' alt='boy1'/>
        <div class="player_username">
        </div>
        </div>
    </div>
    <div class="section">
        <div class="ready">
            <button id="readybutton" onclick="javascript:$('.users').removeClass('ready')">Ready?</button>
        </div>
    </div>
</div>


<div class="container">
    <div class="card_left">
        <div class="common_card">

            <div class="common_card_name">
                <h1>Example name</h1>
            </div>

            <div class="common_card_desc">
                <p>description here</p>
            </div>

            <div class="common_card_img">
                <img id="c_card_img" src="<%= asset_path 'Pikachu.png'%>" alt='happiness'>
            </div>

        </div>
    </div>

    <div class="center">
        <div class="timer">
            <div id="log"></div>
            <div id="bar_bg">
                <div id="bar"></div>
            </div>
        </div>
    </div>

    <div class="card_right">
        <div class="personal_card">

            <div class="personal_card_name"></div>
            <h1>행복</h1>

            <div class="personal_card_desc">
            <p>가치관, 인생, 대학생활 등  </p>
            </div>

            <div class="personal_card_img">
            <img id="p_card_img" src="<%= asset_path 'happy.JPG'%>" alt='happiness'>

            </div>
        </div>
    </div>
</div>
